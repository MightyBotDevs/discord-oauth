{
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "allowJs": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": {
        "@classes/*": ["classes/*"],
        "@types/*": ["types/*"],
        "@functions/*": ["functions/*"],
        "@utils/*": ["utils/*"]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  }